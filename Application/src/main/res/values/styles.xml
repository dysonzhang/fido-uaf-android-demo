<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="ButtonFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">fill_parent</item>
        <item name="android:typeface">normal</item>
        <item name="android:textColor">@drawable/text_color</item>
    </style>


    <style name="Animations_BottomPush">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="Animations_Activity">
        <item name="android:activityOpenEnterAnimation">@anim/push_bottom_in</item>
        <!--<item name="android:activityOpenExitAnimation">@anim/push_bottom_out</item>-->
        <!--<item name="android:activityCloseEnterAnimation">@anim/push_bottom_in</item>-->
        <item name="android:activityCloseExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="AppTheme.Animations" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animations_Activity</item>
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>
